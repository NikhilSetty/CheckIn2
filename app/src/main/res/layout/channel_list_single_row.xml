<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:weightSum="1"
    android:paddingLeft="2dp">


    <TextView
        android:id="@+id/tvChannelTitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Channel Title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvChannelDescription"
        android:layout_toStartOf="@+id/channellistlocksymbol" />

    <ImageView
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:id="@+id/channellistlocksymbol"
        android:layout_gravity="right"
        android:layout_weight="0.12"
        android:layout_alignTop="@+id/tvChannelTitle"
        android:layout_alignBottom="@+id/tvChannelDescription"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvChannelDescription"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:text="Channel Description"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:maxLines="5"
        android:singleLine="false"
        android:layout_below="@+id/tvChannelTitle"
        android:layout_toStartOf="@+id/channellistlocksymbol" />

</RelativeLayout>